{
  "name": "privacy-compliance-auditor",
  "version": "1.0.0",
  "description": "Confidential compliance checking system using Zama FHE for privacy regulation auditing",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "clean": "npx hardhat clean",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "node": "npx hardhat node",
    "deploy": "npx hardhat run scripts/deploy.js --network sepolia",
    "deploy:localhost": "npx hardhat run scripts/deploy.js --network localhost",
    "verify": "npx hardhat run scripts/verify.js --network sepolia",
    "verify:localhost": "npx hardhat run scripts/verify.js --network localhost",
    "interact": "npx hardhat run scripts/interact.js --network sepolia",
    "interact:localhost": "npx hardhat run scripts/interact.js --network localhost",
    "simulate": "npx hardhat run scripts/simulate.js --network localhost",
    "etherscan:verify": "npx hardhat verify --network sepolia",
    "lint:sol": "npx solhint contracts/**/*.sol",
    "lint:sol:fix": "npx solhint contracts/**/*.sol --fix",
    "prettier": "npx prettier --write contracts/**/*.sol test/**/*.js scripts/**/*.js",
    "prettier:check": "npx prettier --check contracts/**/*.sol test/**/*.js scripts/**/*.js",
    "format": "npm run prettier",
    "format:check": "npm run prettier:check",
    "ci": "npm run format:check && npm run lint:sol && npm run compile && npm test",
    "ci:coverage": "npm run format:check && npm run lint:sol && npm run compile && npm run test:coverage"
  },
  "keywords": [
    "fhe",
    "privacy",
    "compliance",
    "audit",
    "gdpr",
    "blockchain",
    "zama"
  ],
  "author": "Privacy Compliance Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.0",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^1.4.3",
    "solhint": "^4.5.4",
    "solidity-coverage": "^0.8.16"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.8.0",
    "@zama-fhe/oracle-solidity": "^0.2.0",
    "dotenv": "^16.3.1"
  }
}
